<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_ll_empty_default"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/common_iv_empty_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/replaceable_drawable_empty_default" />

        <TextView
            android:id="@+id/common_tv_empty_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:textColor="@color/common_gray_99"
            android:textSize="@dimen/common_sp_15" />
    </LinearLayout>

    <ImageView
        android:id="@+id/common_iv_empty_default_top_curve"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:visibility="gone" />
</RelativeLayout>