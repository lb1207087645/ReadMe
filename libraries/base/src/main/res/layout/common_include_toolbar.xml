<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/common_dp_16"
    android:layout_marginStart="@dimen/common_dp_16"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/common_toolbar_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="start|center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:paddingRight="@dimen/common_dp_12"
        android:textColor="@color/common_gray_33"
        android:textSize="@dimen/common_sp_16"
        android:layout_alignParentStart="true" />



    <TextView
        android:id="@+id/common_toolbar_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/common_gray_33"
        android:textSize="@dimen/common_sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/common_toolbar_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="end|center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/common_color_green"
        android:textSize="@dimen/common_sp_16" />
</RelativeLayout>