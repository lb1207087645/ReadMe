<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.graduation.android.readme.base.widget.NoScrollHorizontalViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/main_bottom_tab_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <!--底部tabLoyout-->
    <android.support.design.widget.TabLayout
        android:id="@+id/main_bottom_tab_layout"
        style="@style/common_style_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/common_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tabBackground="@color/common_transparent"
        app:tabIndicatorHeight="0dp"
        app:tabRippleColor="@color/common_transparent" />
</android.support.constraint.ConstraintLayout>
