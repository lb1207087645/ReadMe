<resources>

    <!-- Base application theme. -->

    <style name="TextViewSubhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_black</item>
    </style>

    <style name="TextViewTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_black</item>
    </style>

    <style name="common_download_style_tabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/common_transparent</item>
        <item name="tabIndicatorColor">#2f96f6</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">#2f96f6</item>
        <item name="tabTextColor">@color/common_white</item>-->
        <item name="tabTextAppearance">@style/common_download_style_tabTextAppearance</item>
    </style>

    <style name="common_download_style_tabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/common_sp_15</item>
        <item name="textAllCaps">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MainAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="AppTheme" parent="@style/MainAppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
    </style>
    <!--    tabLayout样式-->
    <style name="common_style_tabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/common_white</item>
        <item name="tabIndicatorColor">@color/common_color_blue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/common_color_blue</item>
        <item name="tabTextColor">@color/common_gray_33</item>-->
        <item name="tabTextAppearance">@style/common_style_tabTextAppearance</item>
    </style>

    <style name="common_style_tabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/common_sp_15</item>
        <item name="textAllCaps">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_light_gray</item>
    </style>

    <style name="setting_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/common_gray_33</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawableRight">@mipmap/icon_dir</item>
    </style>

    <!-- 直线 -->
    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.6dp</item>
        <item name="android:background">@color/common_gray_63</item>
    </style>
    <style name="setting_rel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/common_white</item>
        <item name="android:paddingLeft">@dimen/common_dp_10</item>
        <item name="android:paddingRight">@dimen/common_dp_10</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>
    <!--    水平分割线-->
    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#FFF0F0F0</item>
    </style>

    <style name="setting_text_size">
        <item name="android:textColor">@color/common_gray_33</item>
        <item name="android:textSize">@dimen/common_sp_15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">5.5dp</item>

    </style>

    <!-- 用于开启滑动返回功能的 Activity -->
    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="setting_img">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@mipmap/icon_dir</item>
    </style>

</resources>
